<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <a href="#" class="brand-link">
    <img src="../../images/test1.jpg"
         alt="AdminLTE Logo"
         class="brand-image img-circle elevation-3"
         style="opacity: .8">
    <span class="brand-text font-weight-light"> <%= t ".airport_store" %> </span>
  </a>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user -->
    <% if logged_in? %>
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <img src="../../images/test1.jpg" class="img-circle elevation-2" alt="User Image">
      </div>
      <div class="info">
        <%= link_to "#", class: "d-block" do %>
          <% current_user.name %>
        <% end %>
      </div>
    </div>
    <% end %>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <li class="nav-item">
          <%= link_to "#", class: "nav-link" do %>
          <i class="nav-icon fas fa-tachometer-alt"></i>
            <p>
              <%= t ".terminal" %>
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "#", class: "nav-link" do %>
          <i class="nav-icon fas fa-tachometer-alt"></i>
            <p>
              <%= t ".references" %>
            </p>
          <% end %>
        </li>
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to "#", class: "nav-link" do %>
            <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>
                <%= t ".my_stores" %>
              </p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "#", class: "nav-link" do %>
            <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>
                <%= t ".requests" %>
              </p>
            <% end %>
        <% end %>
      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>
